<div class="container mx-auto p-8">
    <h2 class="text-3xl font-semibold mb-6 text-center">Lista de Productos</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {{#each prods.docs}}
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-xl font-semibold">{{this.name}}</h3>
            <p class="text-gray-600">{{this.description}}</p>
            <p class="text-green-500 font-bold">${{this.price}}</p>
            <button class="mt-4 w-full bg-blue-500 text-white p-2 rounded">Agregar al Carrito</button>
        </div>
        {{/each}}
    </div>
</div>